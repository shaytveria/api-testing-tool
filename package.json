{
  "name": "api-testing-tool",
  "version": "1.0.0",
  "description": "API Testing Tool for REST Countries API with automated tests and JSON reports",
  "main": "src/tests/countries.test.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:countries": "jest src/tests/countries.test.js"
  },
  "keywords": [
    "api-testing",
    "qa",
    "testing",
    "rest-api",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/tests/**"
    ]
  }
}

